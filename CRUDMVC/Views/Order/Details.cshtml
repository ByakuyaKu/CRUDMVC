@model CRUDMVC.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details of order - @Model.Number</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProviderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProviderId)
        </dd>

        <h3 class="mt-4">Order items</h3>
        @if (Model.orderItems != null && Model.orderItems.Count > 0)
        {
            @for (int i = 0; i < Model.orderItems.Count; i++)
            {
                <hr class="mt-4" />
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.orderItems[i].Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.orderItems[i].Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.orderItems[i].Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.orderItems[i].Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.orderItems[i].Unit)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.orderItems[i].Unit)
                </dd>
            }
        }
        else
        {
            <p class="mt-4">No order items</p>
        }
    </dl>
</div>
<div>
    <a asp-controller="Order" asp-action="Index" class="btn btn-primary mt-4"> Back</a>
</div>
